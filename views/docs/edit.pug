extends ../layouts/main
block content
    h1 Edit form
    .row
        form.col.s12(action="/docs" method="post")
            .row
                .input-field
                    input(type="text" name="title" value=doc.title)
                    label(for="title") Title
            .row
                .input-field
                    select(name="status")
                            option(value="public" selected=selecting(doc.status, "public") ) Public
                            option(value="private" selected=selecting(doc.status, "private")) Private
                            option(value="unpublished" selected=selecting(doc.status, "unpublished") ) Unpublished
                    label(for="status") Status
            .row
                p
                    input#filled-in-box.filled-in(type="checkbox" name="allowComments"  checked=doc.allowComments ? true : false )
                    label(for="filled-in-box") Allow Comments
            .row
                .input-field
                    h5 Tell Us Your Story:
                    textarea(name="body") #{doc.body}
            input.btn(type="submit" value="Save") 